# Basic utilities
# grep
alias grep='grep -i --color=auto'
alias rgg="rg -g '!*test*' -g '!*spec*'"
alias pg="rg -g '*\.py' -g '*\.rb'"
alias pgg="rgg -g '*\.py' -g '*\.rb'"

# find process
alias pf="ps aux | grep"
alias fp="lsof -aPi -p"

# ipython
alias p='ipython'

# ls
LS_BASE="ls -AFGh"
alias l="$LS_BASE --color=auto"
alias ll="$LS_BASE -gl --color=auto"
alias lS="$LS_BASE -glS --color=auto"
alias lt="$LS_BASE -gltr --color=auto"
alias ls="ls -FG --color=auto"

#exa stuff
alias xa='exa --long --icons --git'

#replacements
alias mv='mv -iv'
alias rmm='rm -Iv' # -I to prompt when more than 3 files
alias cat='bat'
alias bd='batdiff'
alias bgrep='batgrep'

#manpage
alias man='tldr'


# vim
